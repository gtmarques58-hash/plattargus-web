APP_NAME=PlattArgus
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=America/Rio_Branco
APP_URL=https://plattargus.gt2m58.cloud

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# BANCO DE DADOS
# =============================================================================
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=plattargus
DB_USERNAME=plattargus
DB_PASSWORD=sua_senha_segura

# =============================================================================
# REDIS (Cache, Sessões, Filas, Step-up)
# =============================================================================
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# =============================================================================
# CRIPTOGRAFIA SEI (AES-256-GCM)
# =============================================================================
# Gere com: php artisan plattargus:generate-master-key
# NUNCA commite esta chave!
ARGUS_MASTER_KEY=

# =============================================================================
# FASTAPI ENGINE (Comunicação Interna)
# =============================================================================
# URL do Engine - opções de deploy:
# 1. Mesmo servidor, porta diferente: http://localhost:8000
# 2. Container Docker: http://plattargus-engine:8000
# 3. Subdomínio: https://engine.plattargus.gt2m58.cloud
PLATT_ENGINE_URL=http://localhost:8000
PLATT_RUNNER_URL=http://localhost:8001
PLATT_ENGINE_SECRET=sua_chave_hmac_secreta_aqui

# Timeout para requisições ao Engine (segundos)
PLATT_ENGINE_TIMEOUT=120

# =============================================================================
# STEP-UP AUTHENTICATION
# =============================================================================
# Tempo de validade do token de step-up (segundos)
STEP_UP_TTL=90

# Máximo de tentativas de step-up antes de bloquear
STEP_UP_MAX_ATTEMPTS=5

# Tempo de bloqueio após exceder tentativas (minutos)
STEP_UP_LOCKOUT_MINUTES=15

# =============================================================================
# RATE LIMITING
# =============================================================================
# Tentativas de login por minuto
LOGIN_RATE_LIMIT=5

# Requisições à API por minuto
API_RATE_LIMIT=60

# =============================================================================
# SESSÃO
# =============================================================================
SESSION_LIFETIME=480
SESSION_ENCRYPT=true

# =============================================================================
# MAIL (Para notificações futuras)
# =============================================================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@plattargus.gt2m58.cloud"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# MULTI-TENANCY
# =============================================================================
# Domínio central (para identificação de tenants)
TENANCY_CENTRAL_DOMAINS=plattargus.gt2m58.cloud,localhost

# =============================================================================
# SANCTUM (CORS para SPA)
# =============================================================================
SANCTUM_STATEFUL_DOMAINS=plattargus.gt2m58.cloud,localhost,localhost:3000,127.0.0.1,127.0.0.1:8000

# =============================================================================
# VITE (Frontend)
# =============================================================================
VITE_APP_NAME="${APP_NAME}"
