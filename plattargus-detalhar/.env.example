# =============================================================================
# PLATTARGUS-DETALHAR - Configuração de Ambiente
# =============================================================================
# Copie para .env e ajuste os valores
# =============================================================================

# Database (container dedicado)
DATABASE_URL=postgresql+asyncpg://argus:argus_detalhar_2026@detalhar-postgres:5432/argus_detalhar
DETALHAR_DB_PASSWORD=argus_detalhar_2026

# Redis (container dedicado)
REDIS_URL=redis://detalhar-redis:6379/0

# API Key para autenticação externa (deixe vazio para rede interna apenas)
API_KEY=

# Cache TTL em segundos (12 horas = 43200)
CACHE_TTL_SECONDS=43200

# Redis Streams
STREAM_HI=detalhar:hi
STREAM_LO=detalhar:lo
CONSUMER_GROUP=detalhar-workers
CONSUMER_NAME=worker-1

# Lock timeout em minutos (job máximo ~20min + folga)
LOCK_MINUTES=25

# LLM Configuration
USAR_LLM=true
ARGUS_API_KEY=sua-chave-anthropic-aqui
OPENAI_API_KEY=sua-chave-openai-aqui

# Criptografia (mesma chave do Laravel)
ARGUS_MASTER_KEY=sua-master-key-aqui

# Timezone
TZ=America/Rio_Branco
